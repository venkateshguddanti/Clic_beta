<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:text="&lt;"
            android:textColor="@color/white"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Confirm Registration"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        style="@style/CodeFontBold"/>
    <LinearLayout
        android:id="@+id/layoutOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">
    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextOtp"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:textAlignment="center"
        android:imeOptions="actionNext"
        android:maxLength="1"
        android:layout_marginTop="50dp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextOtp1"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:textAlignment="center"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:layout_marginTop="50dp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextOtp2"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:layout_marginTop="50dp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextOtp3"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:maxLength="1"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="10"
        android:layout_margin="20dp"
        android:id="@+id/edtMobileNumber"
        android:imeOptions="actionNext"
        android:hint="@string/hint_mobile"
        android:visibility="gone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="30"
        android:layout_margin="20dp"
        android:hint="@string/hint_name"
        android:id="@+id/edtName"
        android:imeOptions="actionDone"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="** Your click account will shared to user provided here!"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:visibility="gone"
        style="@style/CodeFont"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnValidate"
        android:layout_margin="15dp"
        android:gravity="center"
        style="@style/ClicButton"
        android:layout_gravity="center_horizontal" />
</LinearLayout>