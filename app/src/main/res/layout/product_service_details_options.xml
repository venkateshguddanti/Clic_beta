<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/txt_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="fhdsk;hfdh"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout1">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight=".50">
        <ImageView
            android:id="@+id/icn_warranty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn__warranty"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/txt_warranty"
            android:layout_toRightOf="@+id/icn_warranty"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Warranty"/>
        <TextView
            android:layout_toRightOf="@+id/icn_warranty"
            android:layout_below="@+id/txt_warranty"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            style="@style/CodeFont"
            android:layout_height="wrap_content"
            android:text=""/>
    </RelativeLayout>
    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/background"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight=".50">
        <ImageView
            android:id="@+id/icn_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn__insurance"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/txt_insurance"
            android:layout_toRightOf="@+id/icn_insurance"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Insurance"/>
        <TextView
            android:layout_toRightOf="@+id/icn_insurance"
            android:layout_below="@+id/txt_insurance"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            style="@style/CodeFont"
            android:text=""/>
    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layout1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="onProductClic"
            android:id="@+id/product_demoReq"
            >
            <ImageView
                android:id="@+id/demoReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/demo_request"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/demoReq"
                style="@style/CodeFont"
                android:layout_margin="5dp"
                android:text="Demo\nRequest"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/product_sell"
            android:onClick="onProductClic"
            >
            <ImageView
                android:id="@+id/sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/upload_docs"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sell"
                android:layout_margin="5dp"
                style="@style/CodeFont"
                android:text="Upload\nDocuments"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/product_learn"
            android:onClick="onProductClic"
            >
            <ImageView
                android:id="@+id/learMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/product_manual"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/learMore"
                android:layout_margin="5dp"
                style="@style/CodeFont"
                android:text="Learn\nMore"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/product_service"
            android:onClick="onProductClic"
            >
            <ImageView
                android:id="@+id/serviceReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/service_request"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serviceReq"
                style="@style/CodeFont"
                android:text="Service\nRequest"
                android:layout_margin="5dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/product_info"
            android:onClick="onProductClic"
            >
            <ImageView
                android:id="@+id/productInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trouble_shoot"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productInfo"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                style="@style/CodeFont"
                android:text="Info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onProductClic"
            android:id="@+id/product_chat"
            >
            <ImageView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat"
                android:layout_margin="5dp"
                style="@style/CodeFont"
                android:text="chat"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
